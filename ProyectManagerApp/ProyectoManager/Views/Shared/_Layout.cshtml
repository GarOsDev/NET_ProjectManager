                    </svg>
                    <a class="navbar-brand text-white border-bottom border-danger border-3 fs-2" asp-area="" asp-controller="Home" asp-action="Index">ProjectManager</a>
                    <a class="navbar-brand text-white fs-5 ms-5 menuEnlace" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="navbar-brand text-white fs-5 menuEnlace" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesion</a>
                </div>
                <div class="col-3 my-auto rounded border border-2 border-dark text-center text-light fondoInformaciones rutaURL">Current location: <b><span id="migaPan"></span></b></div>
            </div>


        </div>

    </header>

    <div class="container">
        <div class="row justify-content-center mb-2">
            <div class="col-5 navbarppal rounded-2 text-center">
                <div id="hora" class="text-light fst-italic fs-4"></div>
            </div>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted foter navbarppal">
        <div class="container text-white">
            &copy; 2024 - ProjectManager - <a class="rounded my-auto linkPrivacy" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
